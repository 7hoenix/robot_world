<div class="jumbotron">
  <div class="col-md-4">
    <img src="https://robohash.org/<%= @robot.avatar %>.png">
    <h1><%= @robot.name %></h1>
    <h1><%= @robot.city %></h1>
    <h1><%= @robot.department %></h1>
  </div>

  <a href="/robots/<%= @robot.id %>/edit">Edit</a>

  <div class="col-md-4">
  <form action="/robots/<%= @robot.id %>" method="post">
    <input type="hidden" name="_method" value="delete" />
    <input id="delete" type="submit" value="Delete" />
  </form>
  </div>
</div>
